input#toggle-all
	type = 'checkbox'
	checked = '~[bind: status.todoCount == 0 ? "checked" ]'
	x-signal = 'click: toggleAll'
	// bind and hide/show accordingly
	xx-visible = 'status.count'
	;
label for = 'toggle-all' >
	'Mark all as complete'
ul#todo-list {
	// binded todos array
	%% each = '.' >
		:todoTask;
}